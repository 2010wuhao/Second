<com.joysee.dvb.liveguide.playback.LiveGuide xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:dvb="http://schemas.android.com/apk/res/com.joysee.dvb"
    android:layout_width="397px"
    android:layout_height="match_parent"
    android:background="@drawable/custom_menu_right_bg" >

    <FrameLayout
        android:layout_width="370px"
        android:layout_height="990px"
        android:layout_marginTop="111px" >

        <com.joysee.dvb.liveguide.playback.CategoryProgramSwitcher
            android:id="@+id/playback_liveguide_category_switcher"
            android:layout_width="370px"
            android:layout_height="990px"
            android:layout_marginTop="-198px" />
    </FrameLayout>

    <ImageView
        android:id="@+id/playback_liveguide_category_arrow_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="23px"
        android:layout_marginTop="43px"
        android:src="@drawable/playback_arrow_left" />

    <com.joysee.common.widget.JTextViewWithTTF
        android:id="@+id/playback_liveguide_category_title"
        android:layout_width="197px"
        android:layout_height="44px"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30px"
        android:gravity="center"
        android:text="@string/liveguide_type_recommend"
        android:textColor="@android:color/black"
        android:textSize="30px"
        dvb:ttf="fzltch.TTF" />

    <ImageView
        android:id="@+id/playback_liveguide_category_arrow_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="23px"
        android:layout_marginTop="43px"
        android:src="@drawable/playback_arrow_right" />

</com.joysee.dvb.liveguide.playback.LiveGuide>
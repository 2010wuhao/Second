<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:minHeight="60px"
    android:minWidth="800px"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/ca_authorise_list_item_pid"
        android:layout_width="267px"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="@string/ca_authorise_num_text"
        android:textColor="@android:color/white"
        android:textSize="27px" />

    <TextView
        android:id="@+id/ca_authorise_list_item_deadline"
        android:layout_width="267px"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="@string/ca_authorise_deadline_text"
        android:textColor="@android:color/white"
        android:textSize="27px" />

    <TextView
        android:id="@+id/ca_authorise_list_item_record_flag"
        android:layout_width="267px"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="@string/ca_recording_flag_text"
        android:textColor="@android:color/white"
        android:textSize="27px" />

</LinearLayout>
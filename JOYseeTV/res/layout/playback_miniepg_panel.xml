<?xml version="1.0" encoding="utf-8"?>
<com.joysee.dvb.widget.MiniEpgPanel xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:dvb="http://schemas.android.com/apk/res/com.joysee.dvb"
    android:layout_width="1280px"
    android:layout_height="720px"
    android:background="@drawable/miniepg_panel_bg"
    android:visibility="visible" >

    <com.joysee.common.widget.JTextViewWithTTF
        android:id="@+id/miniepg_panel_channelnum"
        android:layout_width="117px"
        android:layout_height="64px"
        android:layout_marginLeft="37px"
        android:layout_marginTop="29px"
        android:gravity="center_vertical"
        android:textColor="@android:color/black"
        android:textSize="45px"
        dvb:ttf="fzltch.TTF" />

    <com.joysee.common.widget.JTextViewWithTTF
        android:id="@+id/miniepg_panel_channelname"
        android:layout_width="wrap_content"
        android:layout_height="41px"
        android:layout_marginLeft="157px"
        android:layout_marginTop="7px"
        android:gravity="center_vertical"
        android:textColor="@android:color/black"
        android:textSize="29px"
        dvb:ttf="fzltch.TTF" />

    <com.joysee.common.widget.JTextViewWithTTF
        android:id="@+id/miniepg_program_sourcetype"
        android:layout_width="wrap_content"
        android:layout_height="27px"
        android:layout_marginLeft="592px"
        android:layout_marginTop="18px"
        android:gravity="center_vertical"
        android:textColor="@android:color/black"
        android:textSize="20px"
        dvb:ttf="fzltzh.TTF" />

    <com.joysee.common.widget.JTextViewWithTTF
        android:id="@+id/miniepg_current_time"
        android:layout_width="wrap_content"
        android:layout_height="27px"
        android:layout_marginLeft="659px"
        android:layout_marginTop="18px"
        android:gravity="center_vertical"
        android:textColor="@android:color/black"
        android:textSize="20px"
        dvb:ttf="fzltzh.TTF" />

    <ProgressBar
        android:id="@+id/miniepg_panel_progressbar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="563px"
        android:layout_height="2px"
        android:layout_marginLeft="157px"
        android:layout_marginTop="52px"
        android:max="100"
        android:progress="50"
        android:progressDrawable="@drawable/miniepg_progressbar_selector" />

    <com.joysee.common.widget.JTextViewWithTTF
        android:id="@+id/miniepg_panel_program_1_starttime"
        android:layout_width="wrap_content"
        android:layout_height="28px"
        android:layout_marginLeft="157px"
        android:layout_marginTop="59px"
        android:gravity="center_vertical"
        android:textColor="@color/blue_007aff"
        android:textSize="21px"
        dvb:ttf="fzltzh.TTF" />

    <com.joysee.common.widget.JTextViewWithTTF
        android:id="@+id/miniepg_panel_program_1_name"
        android:layout_width="500px"
        android:layout_height="28px"
        android:layout_marginLeft="230px"
        android:layout_marginTop="59px"
        android:singleLine="true"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:textColor="@color/blue_007aff"
        android:textSize="21px"
        dvb:ttf="fzltzh.TTF" />

    <com.joysee.common.widget.JTextViewWithTTF
        android:id="@+id/miniepg_panel_program_2_starttime"
        android:layout_width="wrap_content"
        android:layout_height="28px"
        android:layout_marginLeft="157px"
        android:layout_marginTop="85px"
        android:gravity="center_vertical"
        android:textColor="@android:color/black"
        android:textSize="21px"
        dvb:ttf="fzltzh.TTF" />

    <com.joysee.common.widget.JTextViewWithTTF
        android:id="@+id/miniepg_panel_program_2_name"
        android:layout_width="500px"
        android:layout_height="28px"
        android:layout_marginLeft="230px"
        android:layout_marginTop="85px"
        android:singleLine="true"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:textColor="@android:color/black"
        android:textSize="21px"
        dvb:ttf="fzltzh.TTF" />

</com.joysee.dvb.widget.MiniEpgPanel>
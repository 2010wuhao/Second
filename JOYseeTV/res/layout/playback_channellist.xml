<com.joysee.dvb.channellist.playback.ChannelList xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:dvb="http://schemas.android.com/apk/res/com.joysee.dvb"
    android:layout_width="457px"
    android:layout_height="match_parent"
    android:background="@drawable/playback_channellist_bg" >

    <ImageView
        android:id="@+id/channellist_category_arrow_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="49px"
        android:layout_marginTop="53px"
        android:src="@drawable/playback_arrow_left" />

    <com.joysee.common.widget.JTextViewWithTTF
        android:id="@+id/channellist_category_title"
        android:layout_width="304px"
        android:layout_height="44px"
        android:layout_marginLeft="66px"
        android:layout_marginTop="41px"
        android:gravity="center"
        android:textColor="@android:color/black"
        android:textSize="29px"
        dvb:ttf="fzltch.TTF" />

    <ImageView
        android:id="@+id/channellist_category_arrow_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="369px"
        android:layout_marginTop="53px"
        android:src="@drawable/playback_arrow_right" />

    <com.joysee.dvb.channellist.playback.CategorySwitcher
        android:id="@+id/channellist_category_switcher"
        android:layout_width="1293px"
        android:layout_height="546px"
        android:layout_marginLeft="-431px"
        android:layout_marginTop="111px" >

        <include
            android:layout_width="431px"
            android:layout_height="702px"
            android:layout_marginTop="-78px"
            layout="@layout/playback_channellistview" />

        <include
            android:layout_width="431px"
            android:layout_height="702px"
            android:layout_marginTop="-78px"
            layout="@layout/playback_channellistview" />

        <include
            android:layout_width="431px"
            android:layout_height="702px"
            android:layout_marginTop="-78px"
            layout="@layout/playback_channellistview" />
    </com.joysee.dvb.channellist.playback.CategorySwitcher>

</com.joysee.dvb.channellist.playback.ChannelList>
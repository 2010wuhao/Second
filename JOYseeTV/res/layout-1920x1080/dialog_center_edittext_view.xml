<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:dvb="http://schemas.android.com/apk/res/com.joysee.dvb"
    android:layout_width="match_parent"
    android:layout_height="411px" >

    <com.joysee.common.widget.JTextViewWithTTF
        android:id="@+id/content_view_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="183px"
        android:textColor="#000000"
        android:textSize="50px"
        dvb:ttf="fzltch.TTF" />

    <com.joysee.common.widget.JEditTextWithTTF
        android:id="@+id/content_view_edittext"
        android:layout_width="400px"
        android:layout_height="70px"
        android:layout_below="@id/content_view_message"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30px"
        android:background="@drawable/dvb_edittext_default"
        android:gravity="center"
        android:inputType="numberPassword"
        android:textColor="#000000"
        android:textSize="38px"
        dvb:ttf="fzltch.TTF" />

</RelativeLayout>
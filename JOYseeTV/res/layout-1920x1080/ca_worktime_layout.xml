<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:dvb="http://schemas.android.com/apk/res/com.joysee.dvb"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="68px"
        android:layout_marginTop="200px"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

        <com.joysee.common.widget.JTextViewWithTTF
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ca_begin_time_text"
            android:textColor="@android:color/white"
            android:textSize="40px"
            dvb:ttf="fzltzh.TTF" />

        <com.joysee.common.widget.JEditTextWithTTF
            android:id="@+id/ca_worktime_begintime_hour"
            android:layout_width="100px"
            android:layout_height="65px"
            android:layout_marginLeft="10px"
            android:layout_marginRight="10px"
            android:background="@drawable/dvb_edittext_default"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="2"
            android:textColor="@android:color/white"
            android:textSize="30px"
            dvb:ttf="fzltzh.TTF" />

        <com.joysee.common.widget.JTextViewWithTTF
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ca_time_hour_text"
            android:textColor="@android:color/white"
            android:textSize="40px"
            dvb:ttf="fzltzh.TTF" />

        <com.joysee.common.widget.JEditTextWithTTF
            android:id="@+id/ca_worktime_begintime_minute"
            android:layout_width="100px"
            android:layout_height="65px"
            android:layout_marginLeft="10px"
            android:layout_marginRight="10px"
            android:background="@drawable/dvb_edittext_default"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="2"
            android:textColor="@android:color/white"
            android:textSize="30px"
            dvb:ttf="fzltzh.TTF" />

        <com.joysee.common.widget.JTextViewWithTTF
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ca_time_minute_text"
            android:textColor="@android:color/white"
            android:textSize="40px"
            dvb:ttf="fzltzh.TTF" />

        <com.joysee.common.widget.JTextViewWithTTF
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80px"
            android:text="@string/ca_end_time_text"
            android:textColor="@android:color/white"
            android:textSize="40px"
            dvb:ttf="fzltzh.TTF" />

        <com.joysee.common.widget.JEditTextWithTTF
            android:id="@+id/ca_worktime_endtime_hour"
            android:layout_width="100px"
            android:layout_height="65px"
            android:layout_marginLeft="10px"
            android:layout_marginRight="10px"
            android:background="@drawable/dvb_edittext_default"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="2"
            android:textColor="@android:color/white"
            android:textSize="30px"
            dvb:ttf="fzltzh.TTF" />

        <com.joysee.common.widget.JTextViewWithTTF
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ca_time_hour_text"
            android:textColor="@android:color/white"
            android:textSize="40px"
            dvb:ttf="fzltzh.TTF" />

        <com.joysee.common.widget.JEditTextWithTTF
            android:id="@+id/ca_worktime_endtime_minute"
            android:layout_width="100px"
            android:layout_height="65px"
            android:layout_marginLeft="10px"
            android:layout_marginRight="10px"
            android:background="@drawable/dvb_edittext_default"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="2"
            android:textColor="@android:color/white"
            android:textSize="30px"
            dvb:ttf="fzltzh.TTF" />

        <com.joysee.common.widget.JTextViewWithTTF
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ca_time_minute_text"
            android:textColor="@android:color/white"
            android:textSize="40px"
            dvb:ttf="fzltzh.TTF" />
    </LinearLayout>

    <com.joysee.common.widget.JButtonWithTTF
        android:id="@+id/ca_worktime_bt"
        android:layout_width="306px"
        android:layout_height="80px"
        android:layout_marginTop="200px"
        android:background="@drawable/dvb_round_role_button"
        android:paddingBottom="16px"
        android:text="@string/ca_save_text"
        android:textColor="@android:color/white"
        android:textSize="40px"
        dvb:ttf="fzltch.TTF"/>

</LinearLayout>
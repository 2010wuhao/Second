<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:dvb="http://schemas.android.com/apk/res/com.joysee.dvb"
    android:id="@+id/ca_main_title"
    android:layout_width="match_parent"
    android:layout_height="240px"
    android:orientation="horizontal"
    android:paddingLeft="40px"
    android:paddingTop="40px" >

    <View
        android:layout_width="16px"
        android:layout_height="25px"
        android:layout_marginTop="18px"
        android:background="@drawable/arrow_back" />

    <View
        android:layout_width="1px"
        android:layout_height="82px"
        android:layout_marginLeft="22px"
        android:layout_marginTop="8px"
        android:alpha="0.6"
        android:background="@android:color/white" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18px"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3px"
            android:gravity="center_vertical" >

            <com.joysee.common.widget.JTextViewWithTTF
                android:layout_width="wrap_content"
                android:layout_height="57px"
                android:gravity="center_vertical"
                android:text="@string/ca_main_title_text"
                android:textColor="@android:color/white"
                android:textSize="45px"
                dvb:ttf="fzltzh.TTF" />

            <ImageView
                android:id="@+id/ca_main_layout_title_arrowicon"
                android:layout_width="23px"
                android:layout_height="35px"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:src="@drawable/search_page_next" />

            <com.joysee.common.widget.JTextViewWithTTF
                android:id="@+id/ca_main_layout_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="57px"
                android:gravity="center_vertical"
                android:text="@string/ca_main_title_text"
                android:textColor="@android:color/white"
                android:textSize="45px"
                dvb:ttf="fzltzh.TTF" />
        </LinearLayout>

        <com.joysee.common.widget.JTextViewWithTTF
            android:id="@+id/ca_main_layout_subtitle_tv"
            android:layout_width="wrap_content"
            android:layout_height="38px"
            android:alpha="0.6"
            android:text="@string/ca_subtitle_text"
            android:textColor="@android:color/white"
            android:textSize="26px"
            dvb:ttf="fzltzh.TTF" />
    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<com.joysee.dvb.liveguide.playback.ProgramListItem xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:dvb="http://schemas.android.com/apk/res/com.joysee.dvb"
    android:layout_width="399px"
    android:layout_height="297px"
    android:focusable="true" >

    <ImageView
        android:layout_width="383px"
        android:layout_height="231px"
        android:layout_marginLeft="8px"
        android:layout_marginTop="23px"
        android:scaleType="fitXY"
        android:src="@drawable/liveguide_program_item_default" />

    <ImageView
        android:id="@+id/liveguide_program_item_preview"
        android:layout_width="345px"
        android:layout_height="193px"
        android:layout_marginLeft="27px"
        android:layout_marginTop="32px"
        android:scaleType="fitXY" />

    <View
        android:id="@+id/liveguide_program_item_focus"
        android:layout_width="407px"
        android:layout_height="255px"
        android:layout_marginLeft="-4px"
        android:layout_marginTop="1px"
        android:alpha="0"
        android:background="@drawable/program_preview_cursor" />

    <com.joysee.common.widget.JTextViewWithTTF
        android:id="@+id/liveguide_program_item_pname"
        android:layout_width="340px"
        android:layout_height="38px"
        android:layout_marginLeft="27px"
        android:layout_marginTop="232px"
        android:ellipsize="marquee"
        android:gravity="center_vertical"
        android:marqueeRepeatLimit="marquee_forever"
        android:textColor="@android:color/black"
        android:textSize="32px"
        dvb:ttf="fzltch.TTF" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="28px"
        android:layout_marginTop="268px" >

        <com.joysee.common.widget.JTextViewWithTTF
            android:id="@+id/liveguide_program_item_channelname"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="27px"
            android:gravity="center_vertical"
            android:textColor="@android:color/black"
            android:textSize="24px"
            dvb:ttf="fzltzh.TTF" />

        <com.joysee.common.widget.JTextViewWithTTF
            android:id="@+id/liveguide_program_item_status"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="25px"
            android:gravity="center_vertical"
            android:text="@string/liveguide_programs_item_status"
            android:textColor="@color/blue_007aff"
            android:textSize="24px"
            dvb:ttf="fzltzh.TTF" />
    </LinearLayout>

</com.joysee.dvb.liveguide.playback.ProgramListItem>
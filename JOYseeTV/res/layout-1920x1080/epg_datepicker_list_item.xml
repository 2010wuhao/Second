<com.joysee.dvb.epg.EpgDatePickerListItem xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:dvb="http://schemas.android.com/apk/res/com.joysee.dvb"
    android:layout_width="150px"
    android:layout_height="160px"
    android:orientation="vertical" >

    <com.joysee.common.widget.JTextViewWithTTF
        android:id="@+id/epg_datepicker_item_day"
        android:layout_width="150px"
        android:layout_height="38px"
        android:gravity="center"
        android:textColor="@color/white_alpha_10"
        android:textSize="@dimen/epg_datepickerlist_item_day_textsize_normal"
        dvb:ttf="fzltch.TTF" />

    <com.joysee.common.widget.JTextViewWithTTF
        android:id="@+id/epg_datepicker_item_date"
        android:layout_width="150px"
        android:layout_height="26px"
        android:gravity="center"
        android:textColor="@color/white_alpha_10"
        android:textSize="@dimen/epg_datepickerlist_item_date_textsize_normal"
        dvb:ttf="fzltzh.TTF" />

</com.joysee.dvb.epg.EpgDatePickerListItem>
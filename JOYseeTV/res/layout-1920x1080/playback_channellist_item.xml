<com.joysee.dvb.channellist.playback.ChannelItem xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:dvb="http://schemas.android.com/apk/res/com.joysee.dvb"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dvb_button_default"
    android:clickable="true"
    android:focusable="true" >

    <com.joysee.common.widget.JTextViewWithTTF
        android:id="@+id/playback_channellist_item_channel_num"
        android:layout_width="195px"
        android:layout_height="match_parent"
        android:gravity="center_vertical|right"
        android:paddingRight="21px"
        android:singleLine="true"
        android:textColor="@android:color/black"
        android:textSize="55px"
        dvb:ttf="fzltch.TTF" />

    <View
        android:layout_width="1px"
        android:layout_height="80px"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="199px"
        android:alpha="0.6"
        android:background="@android:color/black" />

    <com.joysee.common.widget.JTextViewWithTTF
        android:id="@+id/playback_channellist_item_channel_name"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/playback_channellist_item_channel_name_height"
        android:layout_marginLeft="@dimen/playback_channellist_item_channel_name_leftmargin"
        android:layout_marginTop="@dimen/playback_channellist_item_channel_name_topmargin"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:textColor="@android:color/black"
        android:textSize="42px"
        dvb:ttf="fzltch.TTF" />

    <com.joysee.common.widget.JTextViewWithTTF
        android:id="@+id/playback_channellist_item_cur_program"
        android:layout_width="wrap_content"
        android:layout_height="32px"
        android:layout_marginLeft="215px"
        android:layout_marginTop="66px"
        android:alpha="0.6"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:textColor="@android:color/black"
        android:textSize="26px"
        dvb:ttf="fzltzh.TTF" />

</com.joysee.dvb.channellist.playback.ChannelItem>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:dvb="http://schemas.android.com/apk/res/com.joysee.dvb"
    android:layout_width="400px"
    android:layout_height="224px"
    android:layout_gravity="top"
    android:background="@drawable/search_result_item_bg" >

    <ImageView
        android:id="@+id/poster"
        android:layout_width="wrap_content"
        android:layout_height="85px"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50px"
        android:src="@drawable/ic_launcher" />

    <com.joysee.common.widget.JTextViewWithTTF
        android:id="@+id/name"
        android:layout_width="300px"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="17px"
        android:gravity="center_horizontal"
        android:lines="1"
        android:visibility="gone"
        android:text="@string/app_name"
        android:textSize="30px"
        dvb:ttf="fzltch.TTF" />

</RelativeLayout>
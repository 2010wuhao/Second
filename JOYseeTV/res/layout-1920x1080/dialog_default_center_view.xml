<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:dvb="http://schemas.android.com/apk/res/com.joysee.dvb"
    android:layout_width="match_parent"
    android:id="@+id/dialog_default_content_view"
    android:layout_height="411px" >

    <com.joysee.common.widget.JTextViewWithTTF
        android:id="@+id/content_view_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="183px"
        android:textColor="#000000"
        android:textSize="50px"
        dvb:ttf="fzltch.TTF" />

    <com.joysee.common.widget.JTextViewWithTTF
        android:id="@+id/content_view_message_point"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/content_view_message"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30px"
        android:textColor="#000000"
        android:textSize="28px"
        dvb:ttf="fzltzh.TTF" />

</RelativeLayout>
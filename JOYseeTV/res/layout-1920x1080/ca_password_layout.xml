<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:dvb="http://schemas.android.com/apk/res/com.joysee.dvb"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="68px"
        android:layout_marginTop="200px"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

        <com.joysee.common.widget.JTextViewWithTTF
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ca_new_password_text"
            android:textColor="@android:color/white"
            android:textSize="40px" />

        <com.joysee.common.widget.JEditTextWithTTF
            android:id="@+id/ca_password_et"
            android:layout_width="308px"
            android:layout_height="65px"
            android:layout_marginLeft="10px"
            android:layout_marginRight="10px"
            android:background="@drawable/dvb_edittext_default"
            android:gravity="center_vertical|left"
            android:inputType="numberPassword"
            android:maxLength="6"
            android:paddingLeft="10px"
            android:textColor="@android:color/white"
            android:textSize="30px" />

        <com.joysee.common.widget.JTextViewWithTTF
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100px"
            android:text="@string/ca_confirm_password_text"
            android:textColor="@android:color/white"
            android:textSize="40px" />

        <com.joysee.common.widget.JEditTextWithTTF
            android:id="@+id/ca_password_confirm_et"
            android:layout_width="308px"
            android:layout_height="65px"
            android:layout_marginLeft="10px"
            android:layout_marginRight="10px"
            android:background="@drawable/dvb_edittext_default"
            android:gravity="center_vertical|left"
            android:inputType="numberPassword"
            android:maxLength="6"
            android:paddingLeft="10px"
            android:textColor="@android:color/white"
            android:textSize="30px" />
    </LinearLayout>

    <com.joysee.common.widget.JButtonWithTTF
        android:id="@+id/ca_password_bt"
        android:layout_width="306px"
        android:layout_height="80px"
        android:layout_marginTop="200px"
        android:background="@drawable/dvb_round_role_button"
        android:paddingBottom="16px"
        android:text="@string/ca_save_text"
        android:textColor="@android:color/white"
        android:textSize="40px"
        dvb:ttf="fzltch.TTF" />

</LinearLayout>
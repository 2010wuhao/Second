<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:dvb="http://schemas.android.com/apk/res/com.joysee.dvb"
    android:layout_width="1920px"
    android:layout_height="1080px"
    android:background="@drawable/dvb_bg" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="952px"
        android:layout_marginTop="110px"
        android:clipToPadding="false"
        android:paddingBottom="20px"
        android:paddingTop="20px" >

        <com.joysee.dvb.channellist.ChannelListGrid
            android:id="@+id/channellist_grid"
            android:layout_width="1820px"
            android:layout_height="1368px"
            android:layout_marginLeft="50px"
            android:layout_marginTop="-228px"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:paddingLeft="20px"
            android:paddingRight="20px" >

            <include layout="@layout/channellist_grid_row" />

            <include layout="@layout/channellist_grid_row" />

            <include layout="@layout/channellist_grid_row" />

            <include layout="@layout/channellist_grid_row" />

            <include layout="@layout/channellist_grid_row" />

            <include layout="@layout/channellist_grid_row" />
        </com.joysee.dvb.channellist.ChannelListGrid>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/epg_programs_layout_top_mask" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="-70px"
        android:src="@drawable/epg_programs_layout_bottom_mask" />

    <ImageView
        android:layout_width="16px"
        android:layout_height="25px"
        android:layout_marginLeft="36px"
        android:layout_marginTop="54px"
        android:scaleType="fitXY"
        android:src="@drawable/arrow_back" />

    <View
        android:layout_width="1px"
        android:layout_height="32px"
        android:layout_marginLeft="70px"
        android:layout_marginTop="51px"
        android:alpha="0.6"
        android:background="@android:color/white" />

    <com.joysee.common.widget.JTextViewWithTTF
        android:layout_width="wrap_content"
        android:layout_height="44px"
        android:layout_marginLeft="89px"
        android:layout_marginTop="45px"
        android:alpha="0.6"
        android:gravity="center_vertical"
        android:text="@string/title_channellist"
        android:textColor="@android:color/white"
        android:textSize="40px"
        dvb:ttf="fzltch.TTF" />

</FrameLayout>
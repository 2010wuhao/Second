<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:dvb="http://schemas.android.com/apk/res/com.joysee.tvbox.settings"
    android:layout_width="match_parent"
    android:layout_height="274dp" >

    <com.joysee.common.widget.JTextViewWithTTF
        android:id="@+id/content_view_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textColor="#000000"
        android:textSize="34dp"
        dvb:ttf="fzltch.TTF" />

    <com.joysee.common.widget.JEditTextWithTTF
        android:id="@+id/content_view_edittext"
        android:layout_width="500dp"
        android:layout_height="47dp"
        android:layout_below="@id/content_view_message"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/dvb_edittext_default"
        android:gravity="center"
        android:inputType="textPassword"
        android:imeOptions="actionNone"
        android:textColor="#000000"
        android:textSize="25dp"
        dvb:ttf="fzltch.TTF" />

</RelativeLayout>
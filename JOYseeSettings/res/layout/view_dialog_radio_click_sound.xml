<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:dvb="http://schemas.android.com/apk/res/com.joysee.tvbox.settings"
    android:layout_width="match_parent"
    android:layout_height="274dp"
    android:gravity="center" >

    <RadioGroup
        android:id="@+id/radio_group"
        android:layout_width="match_parent"
        android:layout_height="274dp"
        android:gravity="center" >

        <RadioButton
            android:id="@+id/radio_on"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@null"
            android:checked="true"
            android:drawableLeft="@drawable/selector_radio_button_left"
            android:text="@string/button_on_option"
            android:textColor="#bb000000"
            android:textSize="34dp" >
        </RadioButton>

        <RadioButton
            android:id="@+id/radio_off"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@null"
            android:drawableLeft="@drawable/selector_radio_button_left"
            android:text="@string/button_off_option"
            android:textColor="#bb000000"
            android:textSize="34dp" >
        </RadioButton>
    </RadioGroup>

</RelativeLayout>
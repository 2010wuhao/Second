<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:dvb="http://schemas.android.com/apk/res/com.joysee.tvbox.settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/view_settings_title_padding_left" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:id="@+id/linear_layout_settings_title_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/view_settings_title_margin_top"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/left_arrow" />

            <com.joysee.common.widget.JTextViewWithTTF
                android:id="@+id/txt_settings_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/view_settings_title_text_margin_left"
                android:textSize="@dimen/text_size_view_settings_title"
                dvb:ttf="fzltch.TTF" />
        </LinearLayout>

        <com.joysee.common.widget.JTextViewWithTTF
            android:id="@+id/txt_settings_title_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/linear_layout_settings_title_top"
            android:layout_marginLeft="@dimen/view_settings_title_description_margin_left"
            android:layout_marginTop="@dimen/view_settings_title_description_margin_top"
            android:alpha="0.5"
            android:textSize="@dimen/text_size_view_settings_title_description"
            dvb:ttf="fzltzh.TTF" />
    </RelativeLayout>

</LinearLayout>
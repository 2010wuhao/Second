<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:dvb="http://schemas.android.com/apk/res/com.joysee.tvbox.settings"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:paddingBottom="1dp" >

    <com.joysee.common.widget.JTextViewWithTTF
        android:id="@+id/txt_settings_progress_item_name"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:textSize="@dimen/text_size_view_item_name"
        dvb:ttf="fzltzh.TTF" />

    <ProgressBar
        android:id="@+id/img_list_item_progress"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:indeterminate="false"
        android:max="100"
        android:progress="50" />

    <com.joysee.common.widget.JTextViewWithTTF
        android:id="@+id/txt_settings_item_progress_option"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/list_settings_item_option_margin_right"
        android:gravity="center"
        android:textSize="@dimen/text_size_view_item_option"
        dvb:ttf="fzltzh.TTF" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/listex_divider"
        android:paddingBottom="-1dp" />

</RelativeLayout>